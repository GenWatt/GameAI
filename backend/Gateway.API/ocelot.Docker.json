{
    "Routes": [
        {
            "UpstreamPathTemplate": "/api/projects/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ],
            "DownstreamPathTemplate": "/api/projects/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "project-api",
                    "Port": 5001
                }
            ]
        },
        {
            "UpstreamPathTemplate": "/api/ai/{everything}",
            "UpstreamHttpMethod": [
                "GET",
                "POST"
            ],
            "DownstreamPathTemplate": "/api/ai/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "ai-api",
                    "Port": 8000
                }
            ]
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "http://gateway-api:5000"
    }
}